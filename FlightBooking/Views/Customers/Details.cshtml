@model FlightBooking.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Bookings)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Flight Number</th>
                    <th>Special Meal</th>
                    <th>Seat Number</th>
                </tr>
                @foreach (var item in Model.Bookings)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Flight.FlightNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpecialMeals)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SeatNumber)
                    </td>
                </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
